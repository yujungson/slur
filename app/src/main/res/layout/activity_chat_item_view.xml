<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.chatItemView">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/slur_logo"
            android:scaleType="fitStart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="채팅"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="현재상태"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/round_border_gray"
            android:padding="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title"
        android:background="@color/colorPrimary2"/>

    <LinearLayout
        android:id="@+id/root_post"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/root_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/root_post"
        android:text="위 게시글을 통해 생성된 채팅입니다."
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"/>

    <ListView
        android:id="@+id/chat_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/inputBOX"
        android:layout_below="@id/root_info"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"/>

    <RelativeLayout
        android:id="@+id/inputBOX"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/menu"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">

        <Button
            android:id="@+id/plusAction"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_centerVertical="true"
            android:text="+"
            android:gravity="center"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/input_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/plusAction"
            android:layout_toLeftOf="@id/sendbtn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/round_border_gray2"/>
        <Button
            android:id="@+id/sendbtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_border_gray"
            android:backgroundTint="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:text="보내기"
            android:textColor="@color/white"
            android:onClick="clickSend"
            android:layout_margin="3dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/blackpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu"
        android:layout_below="@id/title"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">
        <ImageView
            android:id="@+id/menu_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/menu_post"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/post"/>
        <ImageView
            android:id="@+id/menu_rating"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/favourite"/>
        <ImageView
            android:id="@+id/menu_chat"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chat"/>
        <ImageView
            android:id="@+id/menu_profile"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile"/>
    </LinearLayout>


</RelativeLayout>