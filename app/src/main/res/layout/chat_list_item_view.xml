<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="20dp"
    android:background="@drawable/round_border_green"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp">
    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/profile" />
    <TextView
        android:id="@+id/userposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_img"
        android:layout_alignLeft="@id/profile_img"
        android:layout_alignRight="@id/profile_img"
        android:gravity="center"
        android:text="owner"
        android:textSize="10dp"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/gray2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/profile_img">
    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000000"
            android:text="대화상대닉네임"/>
        <TextView
            android:id="@+id/state"
            android:layout_width="70dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_gravity="center"
            android:text="매칭상태"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line1"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/time"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:text="제일최근대화내용"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:text="시간" />

    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>